html
    head
        title EddieHinkle.com
        style
            include homepage.css
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
    body
        div.stats
            div.bio.h-card
                img(src="/images/profile.jpg", alt="Eddie Hinkle", style="display: none;").u-photo
                h2.p-note
                    a(rel="me", href="https://eddiehinkle.com/").u-url.p-name Eddie Hinkle
                    |
                    | is a UI Engineer that lives in Frederick, MD.
                h2
                    | He last ate
                    |
                    each post, index in latestAte
                        a(href=post.getOfficialPermalink()) #{post.properties.ate.properties.name}
                        if index <= latestAte.length - 3
                            |,
                            |
                        else if index === latestAte.length - 2
                            |
                            | and
                            |
                        else
                            |.
                            |
                    | He last drank
                    |
                    a(href=latestDrank.getOfficialPermalink()) #{latestDrank.properties.drank.properties.name}
                    |.
            if latestPodcast
                div.podcast
                    h4 Latest Podcast
                    a(href=latestPodcast.getOfficialPermalink())
                        img(src=latestPodcast.properties.photo[0], width="200")
                    audio(src=latestPodcast.properties.audio, controls=true)
                    p #{latestPodcast.properties.name}
            div.checkin
                h4 Last Seen
                img(src="https://api.mapbox.com/styles/v1/mapbox/streets-v9/static/pin-m+24b1f3(" + latestCheckin.properties.checkin.properties.longitude + "," + latestCheckin.properties.checkin.properties.latitude + ")/" + latestCheckin.properties.checkin.properties.longitude + "," + latestCheckin.properties.checkin.properties.latitude + ",13,0,60/400x400@2x?access_token=pk.eyJ1IjoiZWRkaWVoaW5rbGUiLCJhIjoiY2oxa3o1aXdiMDAwNDMzbjFjNGQ0ejl1eSJ9.WQZ6i6b-TYYe_96IQ6iXdg&attribution=false&logo=false", width='200px')
                a(href=latestCheckin.getOfficialPermalink()) #{latestCheckin.properties.checkin.properties.name}
            if latestWatch
                div.watch
                    h4 Recently Watched
                    if latestWatch.properties.show_image
                        a(href=latestWatch.getOfficialPermalink())
                            img(src=latestWatch.properties.show_image, width="150")
                    else
                        a(href=latestWatch.getOfficialPermalink())
                            img(src=latestWatch.properties.movie_image, width="150")
            div.listen
                h4 Recently Listened
                each post in latestListen
                    a(href=post.getOfficialPermalink())
                        img(src=post.properties['listen-of'].properties.photo, width="100")
            div.photos
                h4 Latest Photos
                each post in latestPhoto
                    a(href=post.getOfficialPermalink())
                        each photo in post.properties.photo
                            if photo.url !== undefined
                                img(src=photo.url, width="100")
                            else
                                img(src=photo, width="100")
        if latestArticles.length > 0
            div.articles
                h4 Latest Articles
                each post in latestArticles
                    div.article !{post.properties.name}
        if latestNotes.length > 0
            div.notes
                h4 Latest Thoughts
                each post in latestNotes
                    div.note !{post.properties.content}
                        |
                        a(href=post.getOfficialPermalink()).note-date #{post.semiRelativeDateTimeFormat()}
